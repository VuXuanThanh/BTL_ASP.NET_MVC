
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Show</title>
</head>
<body>
    <div> 
        <table>
            <tr>
                <th>Mã hàng</th>
                <th>Tên hàng</th>
                <th>Số lượng</th>
                <th>Giá</th>
            </tr>
            @foreach (var item in ViewBag.list2)
            {
                <tr>
                    <td>@item.Product.ProductID</td>
                    <td>@item.Product.ProductName</td>
                    <td>@item.Quanlity</td>
                    <td>@item.Product.Price</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
