
@model PagedList.IPagedList<DoNgoaiChinhHang.Areas.Admin.Models.Product>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<style>
    .btn-primary, .btn-danger {
        float: right
    }
</style>


<div class="row">
    <div class="col-sm-12 p-0">
        <div class="main-header" style="margin-top: 0px;">
            <h4>Sản phẩm</h4>
            <ol class="breadcrumb breadcrumb-title breadcrumb-arrow">
                <li class="breadcrumb-item">
                    <a href="index.html">
                        <i class="icofont icofont-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#"> Quản lý hàng hóa</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#">Sản phẩm</a>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12 p0">
        <div class="card">
            <div class="card-header">
                <h5 class="card-header-text">Danh sách sản phẩm</h5>
                <button disabled class="btn btn-danger waves-effect waves-light delPro">Xóa đã chọn</button>
                @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary waves-effect waves-light" })

            </div>
            <hr style="margin: 0" />
            <div class="card-block">
                <div class="form-group row">
                    <div class="col-md-8">
                        <div class="input-group" id="dropdown1">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-info waves-effect waves-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Sắp xếp
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="@Url.Action("Index", "Products", new { sortOrder = ViewBag.SapTheoTen, currentFilter = ViewBag.CurrentFilter })">Theo tên</a>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">

                        @using (Html.BeginForm())
                        {<div class="input-group">
                                <input id="btnaddon2" name="searchString" type="text" value="@ViewBag.CurrentFilter" class="form-control" placeholder="Nhập tên sản phẩm" aria-describedby="btn-addon2">
                                <span class="input-group-btn" id="btn-addon2">
                                    <button type="submit" class="btn btn-info waves-effect waves-light">
                                        Tìm kiếm
                                    </button>
                                </span>
                            </div>
                        }


                    </div>
                </div>
                <hr />
                <table class="table">
                    <tr>
                        <th>
                            <div class="checkbox-fade fade-in-danger">
                                <label>
                                    <input type="checkbox" id="checkAll">
                                    <span class="cr">
                                        <i class="cr-icon fa fa-check txt-danger"></i>
                                    </span>
                                </label>
                            </div>
                        </th>
                        <th>
                            CategoryName
                        </th>
                        <th>
                            ProductName
                        </th>
                        <th>
                            Image
                        </th>
                        <th>
                            Evaluation
                        </th>
                        <th>
                            Brand
                        </th>
                        <th>
                            Orgin
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Benefit
                        </th>
                        <th>
                            Introduction
                        </th>
                        <th>
                            Element
                        </th>
                        <th>
                            Tutorial
                        </th>
                        <th>Thao tác</th>
                    </tr>
                    <tbody id="tbody">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="checkbox-fade fade-in-danger">
                                        <label>
                                            <input type="checkbox" value="@item.ProductID">
                                            <span class="cr">
                                                <i class="cr-icon fa fa-check txt-danger"></i>
                                            </span>
                                        </label>
                                    </div>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Image)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Evaluation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Brand)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Orgin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Benefit)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Introduction)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Element)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tutorial)
                                </td>
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID.Trim() }, new { @class = "btn btn-inverse-warning waves-effect waves-light", })
                                </td>
                            </tr>
                            <tr>
                                <td class="col-xl-2 col-lg-3 col-sm-3 col-xs-12">
                                    <a href="~/assets/Admin/images/light-box/sl1.jpg" data-lightbox="example-set">
                                        <img src="~/assets/Admin/images/light-box/sl1.jpg" class="img-fluid" alt="">
                                    </a>
                                </td>
                            </tr>    
                            
                        }
                    </tbody>

                </table>
                <br />
                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>

    </div>
</div>