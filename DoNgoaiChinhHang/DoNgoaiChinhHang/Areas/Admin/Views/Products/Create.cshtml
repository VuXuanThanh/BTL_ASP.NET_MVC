                        <div class="form-group row">
                            <div class="col-md-2"></div>
                            <div class="col-sm-10">
                                @*<input type="submit" value="Thêm mới" class="btn btn-info addPro" />*@
                                <input type="submit" value="Thêm mới" class="btn btn-info" />
                                <input type="reset" value="Reset" class="btn btn-inverse-info" />
