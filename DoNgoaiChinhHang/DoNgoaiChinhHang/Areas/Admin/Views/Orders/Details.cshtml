@model DoNgoaiChinhHang.Areas.Admin.Models.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-sm-12 p-0">
        <div class="main-header" style="margin-top: 0px;">
            <h4>Danh sách đơn hàng</h4>
            <ol class="breadcrumb breadcrumb-title breadcrumb-arrow">
                <li class="breadcrumb-item">
                    <a href="index.html">
                        <i class="icofont icofont-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#"> Quản lý sản phẩm</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#">Danh sách đơn hàng</a>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12 p0">
        <div class="card">
            <div class="card-header">
                <h5 class="card-header-text">Chi tiết đơn hàng</h5>
            </div>
            <div class="card-block">

                <div class="col-sm-12 p-20 z-depth-top-0 waves-effect">
                    <div class="col-sm-6 ">
                        <div>
                            @Html.DisplayNameFor(model => model.OrderID)
                        </div>

                        <div>
                            @Html.DisplayFor(model => model.OrderID)
                        </div>
                        <div>
                            @Html.DisplayNameFor(model => model.Account.Phone)
                        </div>

                        <div>
                            @Html.DisplayFor(model => model.Account.Phone)
                        </div>



                        <div>
                            @Html.DisplayNameFor(model => model.Note)
                        </div>
                        <div>
                            @Html.DisplayFor(model => model.Note)
                        </div>
                        <div>
                            @Html.DisplayNameFor(model => model.DateOrder)
                        </div>

                        <div>
                            @Html.DisplayFor(model => model.DateOrder)
                        </div>

                        <div>
                            @Html.DisplayNameFor(model => model.PaymentType)
                        </div>

                        <div>
                            @Html.DisplayFor(model => model.PaymentType)
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div>
                            @Html.DisplayNameFor(model => model.Sum)
                        </div>

                        <div>
                            @Html.DisplayFor(model => model.Sum)
                        </div>

                        <div>
                            @Html.DisplayNameFor(model => model.Status)
                        </div>

                        <div>
                            @Html.DisplayFor(model => model.Status)
                        </div>

                        <div>
                            @Html.DisplayNameFor(model => model.Discount)
                        </div>

                        <div>
                            @Html.DisplayFor(model => model.Discount)
                        </div>

                    </div>
                </div>

                <div class="col-sm-12">
                    <hr />
                    <h5 class="card-header-text">Danh sách sản phẩm</h5>
                    <table class="table">
                        <tr>
                            <th>
                                ProductID
                            </th>
                            <th>
                                ProductName
                            </th>
                            <th>
                                Quantity
                            </th>
                            <th>
                                Price
                            </th>

                        </tr>
                        <tbody id="tbody">
                            @foreach (var item in Model.OrderDetails.Where(s => s.OrderID == Model.OrderID))
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Product.ProductName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Quantity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>

                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>


            </div>
        </div>

    </div>
</div>
