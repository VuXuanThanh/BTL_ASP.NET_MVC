@model DoNgoaiChinhHang.Areas.Admin.Models.CategoryBase
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var imgPath = "~/assets/img/" + Model.Images;
}

<style>
    .editBaseCate {
        margin-right: 20px
    }
</style>

<div class="row">
    <div class="col-sm-12 p-0">
        <div class="main-header" style="margin-top: 0px;">
            <h4>Danh mục cha</h4>
            <ol class="breadcrumb breadcrumb-title breadcrumb-arrow">
                <li class="breadcrumb-item">
                    <a href="index.html">
                        <i class="icofont icofont-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#"> Quản lý danh mục</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#">Danh mục cha</a>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12 p0">
        <div class="card">
            <div class="card-header">
                <h5 class="card-header-text">Sửa danh mục</h5>
            </div>
            <hr style="margin: 0" />
            <div class="card-block">


                @using (Html.BeginForm("Edit", "CategoryBases", FormMethod.Post, new { @id = "formSubmit" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.CategoryBaseID)

                        <div class="form-group row">
                            @Html.LabelFor(model => model.CategoryBaseName, htmlAttributes: new { @class = "form-control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.CategoryBaseName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CategoryBaseName, "", new { @class = "text-danger", @id = "CategoryBaseName2" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "form-control-label col-md-2" })
                            <div class="col-sm-10">

                                @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control", @rows = "9", @placeholder = "Nhập mô tả" })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger", @id = "Description2" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Images, htmlAttributes: new { @class = "form-control-label col-md-2" })
                            <div class="col-sm-10">

                                <img id="output" src="@Url.Content(imgPath)" alt="Ảnh" class="img-rounded" style="width:200px; height: 200px" />
                                <br />
                                <label for="file" class="form-control-label" style="cursor:pointer">
                                    Chọn ảnh
                                    <input name="Images" style="display:none" type="file" id="file" class="custom-file-input" onchange="loadFile(event)">
                                </label>
                                <br />
                                @Html.ValidationMessageFor(model => model.Images, "", new { @class = "text-danger", @id = "Images2" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2"></div>
                            <div class="col-md-10">
                                <input type="submit" value="Lưu lại" class="btn btn-primary editBaseCate" />
                                @Html.ActionLink("Quay lại", "Index")
                            </div>
                        </div>
                    </div>
                }

                <div>

                </div>
            </div>
        </div>

    </div>
</div>

